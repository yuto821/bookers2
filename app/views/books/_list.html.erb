<div class="col-md-3">
      <h2>User info</h2>
  <% if user.image.attached? %>
    <%= image_tag current_usar.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'default-image', size: "100x100" %>
  <% end %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
      <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %><i class="fa-solid fa-user-gear"></i><% end %>
      </div>

      <h2 class="mt-3">New book</h2>

     <%= form_with model: book do |f|%>
      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, class:"form-control book_title" %>
      </div>
      <div class="form-group">
        <%= f.label :opinion %><br>
        <%= f.text_area :body, class:"form-control book_body" %>
      </div>

      <div class="form-group">
       <%= f.submit class:"btn btn-success" %>
      </div>
     <% end %>
</div>