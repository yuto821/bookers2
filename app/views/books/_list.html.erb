<div class="col-md-3">
      <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
      <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %><i class="fa-solid fas fa-user-cog"></i><% end %>
      </div>

      <h2 class="mt-3">New book</h2>

     <%= form_with model: book do |f|%>
      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, class:"form-control book_title" %>
      </div>
      <div class="form-group">
        <%= f.label :opinion %><br>
        <%= f.text_area :body, class:"form-control book_body" %>
      </div>

      <div class="form-group">
       <%= f.submit class:"btn btn-success" %>
      </div>
     <% end %>
</div>