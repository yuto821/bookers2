<main>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
   <%= render 'books/list', books: @books, user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          <% @books.each do |book| %>
          <tr>
          </thead>
          <tbody>
            <th>
              <% if book.image.attached? %>
                <%= link_to user_path do %><%= image_tag book.image, size: "80x80" %><% end %>
              <% else %>
                <%= link_to user_path do %><%= image_tag 'default-image', size: "80x80" %><% end %>
              <% end %>
            </th>
            <th><%= link_to book_path(book.id) do %><%= book.title %><% end %></th>
            <th><%= book.body %></th>
          </tr>
          <% end %>
        </tbody>
        </table>
    </div>
  </div>
</div>
</main>
