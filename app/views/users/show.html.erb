<main>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
  <% if @user.image.attached? %>
    <%= image_tag current_usar.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'default-image', size: "100x100" %>
  <% end %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
      <%= link_to edit_user_path, class: 'btn btn-outline-secondary btn-block' do %><i class="fa-solid fa-user-gear"></i><% end %>
      </div>

      <h2 class="mt-3">New book</h2>

      <div class="form-group">
    <%= form_with model: @book do |f|%>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :opinion %>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      </div>
    <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          <%= @books.each do |book| %>
          <tr>
            <th><%= book.image %></th>
            <th><%= book.title %></th>
            <th><%= book.body %></th>
          </tr>
          <% end %>
        </thead>
        <tbody>
        </tbody>
        </table>

    </div>
  </div>
</div>
</main>
