<main>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
   <%= render 'books/list', user: @user, book: @book %>
  <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
       <thead>
           <tr>
               <th>image</th>
               <th>name</th>
               <th colspan="3"></th>
           </tr>
       </thead>
       <% @users.each do |user| %>
       <tbody>
           <tr>
               <td>
                  <%= image_tag user.get_image(80,80)  %>
               </td>
               <td>
                <%= user.name %>
               </td>
               <td>
                <%= link_to user_path(user.id) do %>Show<% end %>
               </td>
           </tr>
       </tbody>
       <% end %>
      </table>
  </div>
  </div>
</div>
</main>